<?xml version="1.0" encoding="UTF-8" ?>
<Shell
        x:Class="MauiApp1.AppShell"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:MauiApp1"
        xmlns:views="clr-namespace:MauiApp1.UI.View"
        Shell.FlyoutBehavior="Disabled"
        Title="MauiApp1">

        <ShellContent Route="MainPage"
                      ContentTemplate="{DataTemplate views:MainPage}"/>
        <ShellContent Route="AdminView"
                      ContentTemplate="{DataTemplate views:AdminView}"/>
        <ShellContent Route="SensorView"
                      ContentTemplate="{DataTemplate views:SensorView}"/>

</Shell>
