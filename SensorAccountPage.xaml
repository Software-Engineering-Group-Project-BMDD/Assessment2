<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SensorAccountPage"
             Title="Sensor Management"
             BackgroundColor="Black">
    <VerticalStackLayout Padding="20">
        <!-- Dropdown button at the top -->
        <Button 
            Text="Dropdown button"
            HorizontalOptions="End"
            BackgroundColor="Transparent"
            TextColor="LightGray"
            ImageSource="dropdown_icon.png" 
            ContentLayout="Right" />

        <!-- First Sensor Status -->
        <Grid Margin="0,20,0,10" ColumnDefinitions="Auto,*,Auto,Auto">
            <Label 
                Grid.Column="0"
                Text="Sensor status"
                TextColor="White"
                VerticalOptions="Center" />

            <Frame 
                Grid.Column="1"
                BackgroundColor="Black"
                BorderColor="White"
                Padding="0"
                CornerRadius="5"
                Margin="5,0,5,0">
                <Picker 
                    Title="Option 1"
                    TextColor="White"
                    TitleColor="White"
                    BackgroundColor="Transparent" />
            </Frame>

            <Image 
                Grid.Column="2"
                Source="wifi_icon.png" 
                WidthRequest="24"
                HeightRequest="24"
                VerticalOptions="Center" />

            <Frame 
                Grid.Column="3"
                BackgroundColor="Orange"
                CornerRadius="20"
                HeightRequest="24"
                WidthRequest="24"
                Padding="0"
                VerticalOptions="Center" />
        </Grid>

        <!-- Second Sensor Status (duplicate the structure) -->
        <Grid Margin="0,10" ColumnDefinitions="Auto,*,Auto,Auto">
            <Label 
                Grid.Column="0"
                Text="Sensor status"
                TextColor="White"
                VerticalOptions="Center" />

            <Frame 
                Grid.Column="1"
                BackgroundColor="Black"
                BorderColor="White"
                Padding="0"
                CornerRadius="5"
                Margin="5,0,5,0">
                <Picker 
                    Title="Option 1"
                    TextColor="White"
                    TitleColor="White"
                    BackgroundColor="Transparent" />
            </Frame>

            <Image 
                Grid.Column="2"
                Source="wifi_icon.png" 
                WidthRequest="24"
                HeightRequest="24"
                VerticalOptions="Center" />

            <Frame 
                Grid.Column="3"
                BackgroundColor="Orange"
                CornerRadius="20"
                HeightRequest="24"
                WidthRequest="24"
                Padding="0"
                VerticalOptions="Center" />
        </Grid>

        <!-- Third Sensor Status (duplicate the structure) -->
        <Grid Margin="0,10" ColumnDefinitions="Auto,*,Auto,Auto">
            <Label 
                Grid.Column="0"
                Text="Sensor status"
                TextColor="White"
                VerticalOptions="Center" />

            <Frame 
                Grid.Column="1"
                BackgroundColor="Black"
                BorderColor="White"
                Padding="0"
                CornerRadius="5"
                Margin="5,0,5,0">
                <Picker 
                    Title="Option 1"
                    TextColor="White"
                    TitleColor="White"
                    BackgroundColor="Transparent" />
            </Frame>

            <Image 
                Grid.Column="2"
                Source="wifi_icon.png" 
                WidthRequest="24"
                HeightRequest="24"
                VerticalOptions="Center" />

            <Frame 
                Grid.Column="3"
                BackgroundColor="Orange"
                CornerRadius="20"
                HeightRequest="24"
                WidthRequest="24"
                Padding="0"
                VerticalOptions="Center" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
